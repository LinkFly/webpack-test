{
    "compilerOptions": {
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "target": "es5",
        "lib": [
            "es6", "es2017", "dom"
        ],
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "sources/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": ["node"],
        "outDir": "./build",
        "experimentalDecorators": true
    }
}
